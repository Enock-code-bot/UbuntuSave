@media (max-width: 1024px) {
    .nav-list {
        justify-content: space-around;
        gap: 1rem;
    }

    .program-card {
        width: 45%;
        margin: 1% 2.5%;
    }

    .impact-numbers {
        flex-wrap: wrap;
        gap: 1.5rem;
    }

    .impact-item {
        flex: 1 1 45%;
        text-align: center;
    }

    .mission,
    .mission-vision-values,
    .contact-info,
    .contact-form-section,
    .map-section,
    .ways-to-help,
    .requirements-expectations,
    .success-stories,
    .faqs,
    .blog-container {
        margin: 1.5rem 1rem;
        padding: 1.5rem;
    }
}

@media (max-width: 768px) {
    .nav-list {
        flex-direction: column;
        gap: 0.5rem;
        align-items: center;
    }

    .program-card {
        width: 90%;
        margin: 0.5rem auto;
    }

    .impact-numbers {
        flex-direction: column;
        gap: 1rem;
    }

    .impact-item {
        flex: 1 1 100%;
        text-align: center;
    }

    .mission,
    .mission-vision-values,
    .contact-info,
    .contact-form-section,
    .map-section,
    .ways-to-help,
    .requirements-expectations,
    .success-stories,
    .faqs,
    .blog-container {
        margin: 1rem 0.5rem;
        padding: 1rem;
    }

    .volunteer-form-section form {
        padding: 0 1rem;
    }
}

@media (max-width: 480px) {
    .hero h1 {
        font-size: 2rem;
    }

    .hero p {
        font-size: 1.1rem;
    }

    .btn-primary,
    .btn-secondary {
        padding: 0.5rem 1.5rem;
        font-size: 1rem;
    }

    .nav-list li a {
        font-size: 1rem;
        padding: 0.4rem 0.8rem;
    }

    .program-card {
        width: 100%;
        margin: 0.5rem 0;
    }

    .impact-numbers {
        gap: 0.5rem;
    }

    .impact-item h2 {
        font-size: 2rem;
    }

    .impact-item p {
        font-size: 1rem;
    }
}
